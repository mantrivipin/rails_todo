<% if @tasks.blank? %>
 <p>You have no todos assigned.</p>
<% else %>
  <h1>Dashboard</h1>
  <br><br>
  <table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status.titleize %></td>
        <td><%= link_to 'Edit Status', set_status_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>